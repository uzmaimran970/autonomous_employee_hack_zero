# Silver Tier Foundation - Environment Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control

# Required: Path to your Obsidian vault
VAULT_PATH=/path/to/autonomous_employee

# File Watcher: Directory to monitor for new files
WATCH_DIR=/path/to/monitored/directory

# Optional: Check interval in seconds (default: 30)
CHECK_INTERVAL_SECONDS=30

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Silver Tier: Operations log path (stored outside vault)
OPERATIONS_LOG_PATH=./operations.log

# Silver Tier: Auto-execute simple tasks (default: false)
AUTO_EXECUTE_SIMPLE=false

# Silver Tier: Enable credential scanning (default: true)
CREDENTIAL_SCAN_ENABLED=true

# Gold Tier: Auto-execute complex tasks (default: false)
# WARNING: Complex tasks may modify multiple files — enable with caution
AUTO_EXECUTE_COMPLEX=false

# Gold Tier: Comma-separated list of allowed external services for permission gate
# Leave empty to block all external service references
ALLOWED_EXTERNAL_SERVICES=

# Gold Tier: SLA thresholds in minutes
SLA_SIMPLE_MINUTES=2
SLA_COMPLEX_MINUTES=10

# Gold Tier: Notification channel (webhook, slack, email — empty = disabled)
NOTIFICATION_CHANNEL=
# Gold Tier: Notification endpoint URL (e.g., Slack webhook URL)
NOTIFICATION_ENDPOINT=

# Gold Tier: Rollback snapshot retention in days (default: 7)
ROLLBACK_RETENTION_DAYS=7

# Platinum Tier: Predictive SLA breach probability threshold (default: 0.7)
# Alerts fire when breach probability exceeds this value
PREDICTION_THRESHOLD=0.7

# Platinum Tier: Maximum concurrent task executions (default: 3)
MAX_PARALLEL_TASKS=3

# Platinum Tier: Historical data retention window in days (default: 30)
LEARNING_WINDOW_DAYS=30

# Platinum Tier: Maximum self-healing recovery attempts per task (default: 3)
MAX_RECOVERY_ATTEMPTS=3

# Platinum Tier: Per-task execution timeout in minutes (default: 15)
TASK_TIMEOUT_MINUTES=15

# Platinum Tier: Feature toggles (set to false to revert to Gold behavior)
ENABLE_PREDICTIVE_SLA=true
ENABLE_SELF_HEALING=true
ENABLE_RISK_SCORING=true

# Platinum Tier: Risk score formula weights (must sum to 1.0)
RISK_WEIGHT_SLA=0.3
RISK_WEIGHT_COMPLEXITY=0.2
RISK_WEIGHT_IMPACT=0.3
RISK_WEIGHT_FAILURE=0.2

# Gmail Watcher (optional - only if using Gmail integration)
# GMAIL_CLIENT_ID=your_client_id
# GMAIL_CLIENT_SECRET=your_client_secret
# GMAIL_TOKEN_PATH=/path/to/token.json
